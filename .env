
# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME="LearnAI Platform"
VERSION=1.0.0

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/learnai_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# =============================================================================
# AI SERVICES
# =============================================================================
OPENAI_API_KEY=sk_open_ai_api_key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
OPENAI_MODEL=gpt-4
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# VECTOR DATABASE
# =============================================================================
PINECONE_API_KEY=sk_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=learnai-vectors

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# =============================================================================
# EMAIL
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@learnai.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=false
MAINTENANCE_MODE=false

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Gamification Settings
ACHIEVEMENT_XP_MULTIPLIER=1.0
STREAK_BONUS_ENABLED=true
LEADERBOARD_ENABLED=true

# Community Settings  
MAX_POST_LENGTH=5000
MAX_COMMENT_LENGTH=1000
COMMUNITY_MODERATION=true

# Assessment Settings
ADAPTIVE_ASSESSMENT_ENABLED=true
MAX_QUESTIONS_PER_ASSESSMENT=20

# External APIs
COURSERA_API_KEY=your_coursera_api_key
UDEMY_API_KEY=your_udemy_api_key
